---
import Author from './Author.astro';

const { title, description } = Astro.props
---

<div class="header">
  <h1 class="latest">{title}</h1>
  <p>{description}</p>
  <Author name="@jiyuujin" href="https://twitter.com/jiyuujinlab" />
</div>

<style>
  .latest {
    font-size: 2.25rem;
    font-weight: 700;
  }

  .header {
    padding-bottom: 2rem;
    margin: 0 1.02rem;
    border-bottom: 1px solid var(--theme-divider);
  }

  .header > * {
    margin: 0;
  }
</style>
